# ====================================
# TAXINI ENVIRONMENT CONFIGURATION
# ====================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!

# ====================================
# SHARED CONFIGURATION
# ====================================

# API Key for backend authentication
# Generate with: openssl rand -base64 32
TAXINI_API_KEY=your-api-key-here-change-this

# Development mode (true for local dev, false for production)
TAXINI_DEVELOPMENT_MODE=true

# ====================================
# BACKEND CONFIGURATION
# ====================================

# Supabase Configuration
TAXINI_SUPABASE_URL=https://your-project.supabase.co
TAXINI_SUPABASE_API_KEY=your-supabase-anon-key-here

# Database URL (PostgreSQL)
# Format: postgresql://user:password@host:port/database?sslmode=require
TAXINI_SUPABASE_DB_URL=postgresql://postgres:your-password@host:5432/postgres?sslmode=require

# JWT Configuration
# Generate secret with: openssl rand -base64 64
TAXINI_JWT_SECRET=your-super-secret-jwt-key-change-this-use-openssl-rand-base64-64
TAXINI_JWT_ALGORITHM=HS256
TAXINI_JWT_EXPIRATION_MINUTES=60

# Admin Credentials (initial setup)
TAXINI_ADMIN_EMAIL=admin@taxini.com
TAXINI_ADMIN_PASSWORD=Admin@123Change
TAXINI_ADMIN_NAME=Taxini Admin
TAXINI_ADMIN_PHONE=+12345678900

# Mapbox Access Token (get from https://account.mapbox.com)
TAXINI_MAPBOX_ACCESS_TOKEN=pk.your-mapbox-token-here

# ====================================
# FRONTEND CONFIGURATION
# ====================================

# Backend API Base URL
VITE_API_BASE_URL=http://localhost:8000/api/v1

# Backend API Key (must match TAXINI_API_KEY above)
VITE_API_KEY=your-api-key-here-change-this

# Supabase Configuration (for real-time features)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key-here

# Mapbox Configuration (get from https://account.mapbox.com)
VITE_MAPBOX_ACCESS_TOKEN=pk.your-mapbox-token-here
VITE_MAPBOX_STYLE=mapbox://styles/mapbox/dark-v11

# Default location (Tunis, Tunisia)
VITE_DEFAULT_LAT=36.8065
VITE_DEFAULT_LNG=10.1815

# App Configuration
VITE_APP_NAME=Taxini
VITE_APP_VERSION=1.0.0

# ====================================
# PRODUCTION OVERRIDES
# ====================================
# For production deployment, set:
# TAXINI_DEVELOPMENT_MODE=false
# VITE_API_BASE_URL=https://your-production-backend.com/api/v1
# Use strong, randomly generated secrets
# Enable SSL/TLS for database connections
